<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".menu.ProfileFragment"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profilePhoto"
            android:layout_width="@dimen/multiplier_20dp"
            android:layout_height="@dimen/multiplier_20dp"
            android:src="@drawable/profile_photo"
            android:layout_marginStart="@dimen/multiplier_14dp"
            android:layout_marginTop="@dimen/multiplier_9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daniel Cano"
            android:textSize="@dimen/multiplier_8sp"
            android:layout_marginStart="@dimen/multiplier_15dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/profilePhoto"
            app:layout_constraintStart_toEndOf="@id/profilePhoto"
            app:layout_constraintTop_toTopOf="@+id/profilePhoto" />

        <ImageView
            android:layout_width="@dimen/multiplier_14dp"
            android:layout_height="@dimen/multiplier_14dp"

            android:layout_marginEnd="@dimen/multiplier_14dp"
            android:src="@drawable/ic_outline_settings_24"
            app:layout_constraintBottom_toBottomOf="@+id/profilePhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/profilePhoto" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/multiplier_8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/profilePhoto">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/multiplier_14dp"
            android:layout_marginEnd="@dimen/multiplier_14dp"
            android:background="?android:attr/listDivider" />

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/multiplier_77dp"
            android:layout_height="@dimen/multiplier_77dp"
            android:layout_marginStart="@dimen/multiplier_14dp"
            android:layout_marginTop="@dimen/multiplier_18dp"
            android:layout_marginBottom="@dimen/multiplier_14dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/multiplier_6dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/multiplier_45dp"
                    android:background="@color/grey_light"
                    android:padding="@dimen/multiplier_5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Calificar y obtener recomendaciones"
                        android:textSize="@dimen/multiplier_5sp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/multiplier_6dp"
                    android:text="Calificaciones"
                    android:textSize="@dimen/multiplier_5sp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/multiplier_5sp"
                    android:text="0"
                    android:textColor="@color/grey_default"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/multiplier_14dp"
        android:layout_marginStart="@dimen/multiplier_15dp"
        android:layout_marginEnd="@dimen/multiplier_24dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de seguimiento"
            android:textColor="@color/black"
            android:textSize="@dimen/multiplier_12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/multiplier_14dp"
            android:textSize="@dimen/multiplier_8sp"
            android:text="Crea una lista de seguimiento para no perderte ninguna película o serie de tv"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <Button
        style="@style/followListButton"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/multiplier_15dp"
        android:layout_marginEnd="@dimen/multiplier_15dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/multiplier_15dp"
        android:layout_marginBottom="@dimen/multiplier_15dp"
        android:text="Empieza tu lista de seguimiento"
        android:padding="15dp"
        />

    <View style="@style/Divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/multiplier_14dp"
        android:layout_marginStart="@dimen/multiplier_15dp"
        android:layout_marginEnd="@dimen/multiplier_24dp"
        android:layout_marginBottom="@dimen/multiplier_15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vistas Recientes"
            android:textColor="@color/black"
            android:textSize="@dimen/multiplier_12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/multiplier_14dp"
            android:textSize="@dimen/multiplier_8sp"
            android:text="No has visitado ninguna página recientemente"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/multiplier_14dp"
        android:layout_marginStart="@dimen/multiplier_15dp"
        android:layout_marginEnd="@dimen/multiplier_24dp"
        android:layout_marginBottom="@dimen/multiplier_15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personas favoritas"
            android:textColor="@color/black"
            android:textSize="@dimen/multiplier_12dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/multiplier_14dp"
            android:textSize="@dimen/multiplier_8sp"
            android:text="No has añadido ninguna persona recientemente"
            android:textColor="@color/black"
            />
    </LinearLayout>


</LinearLayout>