<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/thumbnailImage"
        android:layout_width="@dimen/multiplier_45dp"
        android:layout_height="@dimen/multiplier_65dp"

        android:contentDescription="@string/movie_image_contentDescription"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/multiplier_12dp"
        />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/movie_name_default"
        android:textSize="@dimen/multiplier_9sp"
        app:layout_constraintBottom_toTopOf="@+id/yearText"
        app:layout_constraintStart_toEndOf="@+id/thumbnailImage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/multiplier_9dp"
        />

    <TextView
        android:id="@+id/yearText"
        android:layout_width="103dp"
        android:layout_height="17dp"
        android:layout_marginStart="@dimen/multiplier_9dp"
        android:layout_marginBottom="@dimen/multiplier_9dp"
        android:text="@string/movie_year_default"
        android:textSize="@dimen/multiplier_9sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/thumbnailImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actorsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_actors_default"
        android:textSize="@dimen/multiplier_7sp"

        app:layout_constraintStart_toEndOf="@+id/thumbnailImage"
        app:layout_constraintTop_toBottomOf="@+id/yearText"
        android:layout_marginTop="@dimen/multiplier_17dp"
        android:layout_marginStart="@dimen/multiplier_9dp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>