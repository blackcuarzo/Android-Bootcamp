<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccessActivity"
    android:orientation="vertical"
    android:gravity="center">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="@dimen/multiplier_26dp"
        android:name="com.danielcano.imdbapp.access.LoginFragment"
        tools:layout="@layout/fragment_login"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/multiplier_52dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_imdb_logo_2016"
        android:contentDescription="@string/imdb_logo_description"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_field_label"
        android:textSize="@dimen/multiplier_7sp"
        android:textStyle="bold"
        android:paddingStart="@dimen/multiplier_26dp"
        android:paddingEnd="@dimen/multiplier_26dp"
        android:layout_marginBottom="@dimen/multiplier_5dp"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/multiplier_34dp"
        android:labelFor="@+id/user"
        app:boxCornerRadiusBottomEnd="@dimen/multiplier_7dp"
        app:boxCornerRadiusTopEnd="@dimen/multiplier_7dp"
        app:boxCornerRadiusBottomStart="@dimen/multiplier_7dp"
        app:boxCornerRadiusTopStart="@dimen/multiplier_7dp"
        android:paddingStart="@dimen/multiplier_26dp"
        android:paddingEnd="@dimen/multiplier_26dp"
        android:layout_marginBottom="@dimen/multiplier_7dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pass_field_label"
        android:textSize="@dimen/multiplier_7sp"
        android:textStyle="bold"
        android:paddingStart="@dimen/multiplier_26dp"
        android:paddingEnd="@dimen/multiplier_26dp"
        android:layout_marginBottom="@dimen/multiplier_5dp"

        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/multiplier_34dp"
        android:labelFor="@+id/pass"
        android:paddingStart="@dimen/multiplier_26dp"
        android:paddingEnd="@dimen/multiplier_26dp"
        android:layout_marginBottom="@dimen/multiplier_7dp"

        app:boxCornerRadiusBottomEnd="@dimen/multiplier_6dp"
        app:boxCornerRadiusTopEnd="@dimen/multiplier_6dp"
        app:boxCornerRadiusBottomStart="@dimen/multiplier_6dp"
        app:boxCornerRadiusTopStart="@dimen/multiplier_6dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/multiplier_26dp"
        android:layout_marginEnd="@dimen/multiplier_26dp"
        android:text="@string/login_button"
        android:textStyle="bold"
        android:textSize="@dimen/multiplier_9sp"
        android:backgroundTint="@color/button_login"
        android:textColor="@color/login_button_text"
        android:layout_marginBottom="@dimen/multiplier_7dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:text="@string/social_text"
        android:textStyle="italic"
        android:textSize="@dimen/multiplier_7sp"
        android:layout_marginBottom="@dimen/multiplier_7dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/multiplier_7dp">

        <Button
            android:id="@+id/apple_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon = "@drawable/ic_apple_icon3"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
            />

        <Button
            android:id="@+id/facebook_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon = "@drawable/ic_facebook_icon"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
            android:layout_marginStart="@dimen/multiplier_7dp"
            android:layout_marginEnd="@dimen/multiplier_7dp"
            />

        <Button
            android:id="@+id/google_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon = "@drawable/ic_google_icon"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            app:shapeAppearance="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/registration_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_text"
        android:textStyle="italic"
        android:textSize="@dimen/multiplier_7sp"
        />

    <TextView
        android:id="@+id/guest_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/login_guest"
        android:textSize="@dimen/multiplier_7sp"
        />

</LinearLayout>